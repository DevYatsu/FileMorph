{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "FileMorph",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": { "open": true, "save": true },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/256x256.png",
        "icons/512x512.png",
        "icons/1024x1024.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.file.morph",
      "targets": "all"
    },
    "security": {
      "csp": "Content-Security-Policy: default-src 'self' data:"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "FileMorph",
        "width": 750,
        "height": 650,
        "minWidth": 450,
        "minHeight": 550
      }
    ]
  }
}
